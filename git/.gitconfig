[core]
    editor = $EDITOR
    trustctime = false

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = cyan

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green

[color "status"]
    added = green
    changed = yellow
    untracked = cyan

[pull]
    default = current

[push]
    default = current

[alias]
    difftoolall = difftool --dir-diff
    stat = status
    plog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    dlog = log --graph --oneline --simplify-by-decoration

[credential]
    helper = cache --timeout=3600

[include]
    path = .git.identity
